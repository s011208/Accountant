<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_entry_title_margin_top"
        android:gravity="center"
        android:text="@string/main_title"
        android:textSize="@dimen/main_entry_title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/plan"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_entry_button_margin_v"
                android:layout_marginLeft="@dimen/main_entry_button_margin_h"
                android:layout_marginRight="@dimen/main_entry_button_margin_h"
                android:layout_marginTop="@dimen/main_entry_button_margin_v"
                android:layout_weight="1"
                android:background="@drawable/general_btn_bg"
                android:singleLine="true"
                android:text="@string/main_entry_plan"
                android:textSize="@dimen/general_btn_text_size" />

            <Button
                android:id="@+id/test"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_entry_button_margin_v"
                android:layout_marginLeft="@dimen/main_entry_button_margin_h"
                android:layout_marginRight="@dimen/main_entry_button_margin_h"
                android:layout_marginTop="@dimen/main_entry_button_margin_v"
                android:layout_weight="1"
                android:background="@drawable/general_btn_bg"
                android:singleLine="true"
                android:text="@string/main_entry_test"
                android:textSize="@dimen/general_btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/overview"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_entry_button_margin_v"
                android:layout_marginLeft="@dimen/main_entry_button_margin_h"
                android:layout_marginRight="@dimen/main_entry_button_margin_h"
                android:layout_marginTop="@dimen/main_entry_button_margin_v"
                android:layout_weight="1"
                android:background="@drawable/general_btn_bg"
                android:singleLine="true"
                android:text="@string/main_entry_overview"
                android:textSize="@dimen/general_btn_text_size" />

            <Button
                android:id="@+id/check_update"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_entry_button_margin_v"
                android:layout_marginLeft="@dimen/main_entry_button_margin_h"
                android:layout_marginRight="@dimen/main_entry_button_margin_h"
                android:layout_marginTop="@dimen/main_entry_button_margin_v"
                android:layout_weight="1"
                android:background="@drawable/general_btn_bg"
                android:singleLine="true"
                android:text="@string/check_update"
                android:textSize="@dimen/general_btn_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>